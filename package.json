{
  "name": "attendance-calculator",
  "version": "1.0.0",
  "description": "Attendance Calculator Web Application",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "install:prod": "npm ci --only=production",
    "prod": "NODE_ENV=production node backend/server.js",
    "test:prod": "node test-prod.js",
    "postinstall": "node -e \"try { require('fs').mkdirSync('logs', { recursive: true }); } catch(e) { if(e.code !== 'EEXIST') throw e; }\"",
    "docker:build": "docker build -t attendance-calculator .",
    "docker:run": "docker run -p 3000:3000 attendance-calculator"
  },
  "dependencies": {
    "@puppeteer/browsers": "2.3.0",
    "attendance-calculator": "file:",
    "body-parser": "1.20.3",
    "compression": "1.7.4",
    "cookie": "0.7.0",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-rate-limit": "7.1.5",
    "generic-pool": "3.9.0",
    "helmet": "7.1.0",
    "morgan": "1.10.0",
    "node-cache": "5.1.2",
    "path-to-regexp": "0.1.7",
    "puppeteer": "22.15.0",
    "puppeteer-core": "22.15.0",
    "send": "0.19.0",
    "serve-static": "1.16.1",
    "tar-fs": "3.0.8",
    "winston": "3.11.0",
    "ws": "8.18.0"
  },
  "devDependencies": {
    "nodemon": "3.0.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "private": true,
  "config": {
    "puppeteer_skip_chromium_download": true
  },
  "resolutions": {
    "path-to-regexp": "0.1.7"
  }
}
